[Unit]
Description=cowrie
Wants=network.target
After=network.target

[Service]
Type=simple
ProtectSystem=true
{% if cowrie_redirect_port %}ExecStartPre=iptables -t nat -A PREROUTING -p tcp --dport 22 -j REDIRECT --to-port {{ cowrie_port }}{% endif %}
ExecStart={{ cowrie_venv }}/bin/twistd -n cowrie
WorkingDirectory={{ cowrie_src_dir }}
User={{ cowrie_user }}
Restart=always

[Install]
WantedBy=multi-user.target
